{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Yearly Population Change",
    "width": 550,
    "height": 250,
    "background": "#F3FAF9",
    "data": {"url": "https://raw.githubusercontent.com/rdev0010/3179/refs/heads/main/data/pop_trend.csv"},
    "layer": [
        {
            "mark": {"type": "line", "tooltip": true},
            "encoding": {
                "x": {"field": "Year", "type": "quantitative", "axis": {"format": ""}},
                "y": {"field": "Population Change", "type": "quantitative"}
            }
        },
        {
            "mark": {
                "type": "point",
                "color": "red",
                "size": 100 
            },
            "encoding": {
                "x": {"field": "Year", "type": "quantitative"},
                "y": {"field": "Population Change", "type": "quantitative"},
                "opacity": {
                    "condition": {
                        "test": "datum.Year == 2008  ||  datum.Year == 2019",
                        "value": 1 
                    },
                "value": 0
                }
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -20,
                "dy": 10,
                "fontSize": 11.5,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {"field": "Annotations"},
                "x": {"field": "Year", "type": "quantitative"},
                "y": {"field": "Population Change", "type": "quantitative"},
                "color": {"value": "black"},
                "opacity": {
                    "condition": {
                        "test": "datum.Year == 2008  ||  datum.Year == 2019",
                        "value": 1 
                    },
                "value": 0
                },
                "tooltip": [
                  {"field": "Year", "type": "quantitative"},
                  {"field": "Population Change", "type": "quantitative", "format": ","}
                ]
            },
            "params": [{
              "name": "hover",
              "select": {
                "type": "point",
                "fields": ["Year"],
                "nearest": true,
                "on": "pointerover",
                "clear": "pointerout"
              }
            }]
        }
    ]
}
