{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Population in Australia States per sq km as of 2023",
    "width": 800,
    "height": 400,
    "layer": [
      {
        "projection": {"type": "mercator"},
        "data": {
          "url": "https://raw.githubusercontent.com/rdev0010/3179/refs/heads/main/js/map.json",
          "format": {"type": "topojson", "feature": "STE_2021_AUST_GDA2020"}
        },
        "transform": [
          {
            "lookup": "properties.STE_NAME21",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/rdev0010/3179/refs/heads/main/data/map_data.csv"
              },
              "key": "States",
              "fields": ["Area", "2023"]
            }
          },
          {"calculate": "datum['2023']/datum.Area", "as": "Population per sq km"}
        ],
        "mark": {
          "type": "geoshape",
          "stroke": "black", 
          "strokeWidth": 0.5  
        },
        "encoding": {
          "color": {
            "field": "Population per sq km",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [1, 2, 5, 10, 15, 25],
              "range": ["#eff3ff","#c6dbef","#9ecae1","#6baed6","#4292c6","#2171b5","#084594"]
            }
          },
          "tooltip": [
            {"field": "properties.STE_NAME21", "type": "nominal", "title": "State"},
            {"field": "2023", "type": "quantitative", "title": "Population"},
            {"field": "Population per sq km", "type": "quantitative", "format": ".2f"} ]
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/rdev0010/3179/refs/heads/main/js/ne_110m_graticules_15.json",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_15"}
        },
        "mark": {
          "type": "geoshape",
          "fill": null,
          "stroke": "lightgrey"
        }
      }
    ]
    
  }